@model IEnumerable<SportStore.Models.Product>

@* @{
    ViewData["Title"] = "Index";
} *@
<style>
    .product-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        background: #fff;
        cursor: pointer;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
        }

    .product-img-wrapper {
        overflow: hidden;
        background: #f8f9fa;
        position: relative;
    }

    .product-img {
        transition: transform 0.4s ease;
        width: 100%;
        height: 250px;
        object-fit: cover;
    }

    .product-card:hover .product-img {
        transform: scale(1.1);
    }

    .product-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 10;
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        background: #dc3545;
        color: white;
    }

    .product-title {
        font-size: 1rem;
        font-weight: 600;
        color: #2d3436;
        line-height: 1.4;
        min-height: 2.8rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }

        .product-title:hover {
            color: #0d6efd;
        }

    .product-price {
        font-size: 1.25rem;
        color: #0d6efd;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .btn-add-cart {
        border-radius: 8px;
        font-weight: 600;
        padding: 0.6rem 1rem;
        transition: all 0.3s ease;
        border: none;
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        width: 100%;
    }

        .btn-add-cart:hover {
            background: linear-gradient(135deg, #0a58ca 0%, #084298 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.4);
        }

    .product-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }
</style>
<h1>Trang chủ</h1>

<section id="products" class="py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            @foreach (var item in Model)
            {
                var detail = item.ProductDetails.FirstOrDefault();
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card product-card h-100 shadow-sm">
                       
                        <a asp-controller="Main"
                           asp-action="ProductDetail"
                           asp-route-id="@item.ProductId"
                           class="product-link">
                            <div class="product-img-wrapper">
                                <span class="product-badge">-30%</span>
                                <img src="~/images/@item.Img"
                                     class="product-img"
                                     asp-append-version="true"
                                     alt="@item.FullName" />
                            </div>
                            <div class="card-body">
                                <h6 class="product-title">@item.FullName</h6>
                                <p class="text-muted small mb-2">@item.Brand</p>
                                <div class="product-price">@detail.Price.ToString("N0") VNĐ</div>
                            </div>
                        </a>

                        <div class="card-body pt-0">
                            <a class="btn btn-primary btn-add-cart"
                               asp-controller="Customers"
                               asp-action="AddToCart"
                               asp-route-id="@detail.ProductDetailId"
                               onclick="event.stopPropagation()">
                                <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>