@model SportStore.Models.Invoice

<h2 class="mb-4">Chi tiết hóa đơn: <span class="text-primary">@Model.InvoiceCode</span></h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Sản phẩm</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.InvoiceDetails)
            {
                var price = item.UnitPrice ?? 0;
                var quantity = item.Quantity ?? 0;
                var amount = price * quantity;

                <tr>
                    <td>@item.Product.FullName</td>
                    <td class="text-end">@price.ToString("N0") đ</td>
                    <td class="text-center">@quantity</td>
                    <td class="text-end">@amount.ToString("N0") đ</td>
                </tr>
            }
        </tbody>
        <tfoot class="table-secondary fw-bold">
            @{
                var total = Model.InvoiceDetails.Sum(d => (d.UnitPrice ?? 0) * (d.Quantity ?? 0));
            }
            <tr>
                <th colspan="3" class="text-end">Tổng tiền</th>
                <th class="text-end">@total.ToString("N0") đ</th>
            </tr>
        </tfoot>
    </table>
</div>

<a asp-controller="Main" asp-action="MyOrders" class="btn btn-outline-primary mt-3">
    <i class="bi bi-arrow-left"></i> Quay lại đơn hàng của tôi
</a>
