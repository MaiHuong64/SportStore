@model IEnumerable<SportStore.Models.Product>

<style>
    .product-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        background: #fff;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
        }

    .product-img-wrapper {
        overflow: hidden;
        background: #f8f9fa;
    }

    .product-img {
        transition: transform 0.4s ease;
        width: 100%;
    }

    .product-card:hover .product-img {
        transform: scale(1.1);
    }

    .product-badge {
        z-index: 10;
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        backdrop-filter: blur(5px);
    }

    .product-title {
        font-size: 1rem;
        font-weight: 600;
        color: #2d3436;
        line-height: 1.4;
        min-height: 2.8rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-brand {
        font-size: 0.875rem;
        color: #6c757d;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .product-price {
        font-size: 1.25rem;
        color: #0d6efd !important;
    }

    .product-price-original {
        font-size: 0.9rem;
        color: #999;
        text-decoration: line-through;
        margin-left: 0.5rem;
    }

    .btn-add-cart {
        border-radius: 8px;
        font-weight: 600;
        padding: 0.6rem 1rem;
        transition: all 0.3s ease;
        border: none;
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
    }

        .btn-add-cart:hover {
            background: linear-gradient(135deg, #0a58ca 0%, #084298 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.4);
        }

    .btn-quick-view {
        position: absolute;
        bottom: 10px;
        right: 10px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: white;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        opacity: 0;
        transition: all 0.3s ease;
        z-index: 5;
    }

    .product-card:hover .btn-quick-view {
        opacity: 1;
    }

    .rating-stars {
        color: #ffc107;
        font-size: 0.85rem;
    }

        .rating-stars .text-muted {
            color: #dee2e6 !important;
        }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2d3436;
        margin-bottom: 2rem;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 60%;
            height: 4px;
            background: linear-gradient(90deg, #0d6efd 0%, #0a58ca 100%);
            border-radius: 2px;
        }
</style>

<div class="container">
    <section id="products" class="py-5">
        <h2 class="section-title">Kết quả tìm kiếm theo: <span class="search-keyword">@ViewBag.SearchKeyword</span></h2>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                var detail = item.ProductDetails.FirstOrDefault();
             

                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card product-card h-100 shadow-sm">
                        <div class="product-img-wrapper position-relative">
                            <span class="product-badge position-absolute top-0 start-0 m-2 badge bg-danger">
                                -30%
                            </span>

                            <button class="btn btn-quick-view" title="Xem nhanh">
                                <i class="bi bi-eye"></i>
                            </button>

                            <img src="~/images/@item.Img"
                                 class="product-img card-img-top"
                                 asp-append-version="true"
                                 alt="@item.FullName"
                                 style="height: 250px; object-fit: cover;" />
                        </div>

                        <div class="card-body d-flex flex-column">
                            <p class="product-brand mb-1">@item.Brand</p>
                            <h6 class="product-title mb-2">@item.FullName</h6>

                          @*   <div class="rating-stars mb-2">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill text-muted"></i>
                                <span class="text-muted ms-1">(4.0)</span>
                            </div> *@

                            <div class="product-price fw-bold text-primary mb-3">
                                @detail.Price.ToString("N0") VNĐ
                            </div>

                            <div class="mt-auto">
                                <a class="btn btn-primary btn-add-cart w-100"
                                   asp-controller="Customers"
                                   asp-action="AddToCart"
                                   asp-route-id="@detail.ProductDetailId">
                                    <i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>