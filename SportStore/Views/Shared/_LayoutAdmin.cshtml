<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Cửa Hàng Đồ Thể Thao</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.css">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="brand-title">
            <i class="bi bi-trophy-fill"></i> SportShop
        </div>
        <nav class="nav flex-column mt-3">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a class="nav-link" asp-controller="Accounts" asp-action="Index">
                <i class="bi bi-person-circle"></i> Tài khoản
            </a>
            <a class="nav-link" asp-controller="Products" asp-action="Index">
                <i class="bi bi-box-seam"></i> Sản phẩm
            </a>
            <a class="nav-link" asp-controller="Invoices" asp-action="Index">
                <i class="bi bi-cart-check"></i> Đơn hàng
            </a>
            <a class="nav-link" asp-controller="Customers" asp-action="Index">
                <i class="bi bi-people"></i> Khách hàng
            </a>
            <a class="nav-link" asp-controller="Categories" asp-action="Index">
                <i class="bi bi-tags"></i> Danh mục
            </a>
            <a class="nav-link" asp-controller="Reports" asp-action="Index">
                <i class="bi bi-graph-up"></i> Báo cáo
            </a>
            <a class="nav-link" asp-controller="Settings" asp-action="Index">
                <i class="bi bi-gear"></i> Cài đặt
            </a>
            <hr class="text-white mx-3 my-3" style="opacity: 0.2;">
            <a class="nav-link" asp-controller="Accounts" asp-action="Logout">
                <i class="bi bi-box-arrow-right"></i> Đăng xuất
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="top-header">
            <div class="header-left">
                <h1 class="page-title">@ViewData["Title"]</h1>
            </div>
            <div class="header-right">
                <div class="user-profile">
                    <div class="user-avatar">
                        @{
                            var username = Context.Session.GetString("Username") ?? "Admin";
                            var initial = username.Substring(0, 1).ToUpper();
                        }
                        @initial
                    </div>
                    <div class="user-info">
                        <div class="user-name">@username</div>
                        <div class="user-role">Administrator</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Admin</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>

            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>