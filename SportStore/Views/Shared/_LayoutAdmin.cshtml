<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Cửa Hàng Đồ Thể Thao</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 px-0 sidebar">
                <div class="brand-title">
                    <i class="bi bi-trophy-fill"></i> SportShop Admin
                </div>
                <nav class="nav flex-column mt-3">
                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a class="nav-link" asp-controller="Accounts" asp-action="Index">
                        <i class="bi bi-person-circle"></i> Tài khoản
                    </a>
                    <a class="nav-link" asp-controller="Products" asp-action="Index">
                        <i class="bi bi-box-seam"></i> Sản phẩm
                    </a>
                    <a class="nav-link" asp-controller="Invoices" asp-action="Index">
                        <i class="bi bi-cart-check"></i> Đơn hàng
                    </a>
                    <a class="nav-link" asp-controller="Customers" asp-action="Index">
                        <i class="bi bi-people"></i> Khách hàng
                    </a>
                    <a class="nav-link" asp-controller="Categories" asp-action="Index">
                        <i class="bi bi-tags"></i> Danh mục
                    </a>
                    <a class="nav-link" asp-controller="Reports" asp-action="Index">
                        <i class="bi bi-graph-up"></i> Báo cáo
                    </a>
                    <a class="nav-link" asp-controller="Settings" asp-action="Index">
                        <i class="bi bi-gear"></i> Cài đặt
                    </a>
                    <hr class="text-white mx-3">
                    <a class="nav-link" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>

                @* <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>@ViewData["Title"]</h2>
                    <div class="user-info">
                        <i class="bi bi-person-circle"></i>
                        <span>@Context.Session.GetString("Username")</span>
                    </div>
                </div> *@

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>