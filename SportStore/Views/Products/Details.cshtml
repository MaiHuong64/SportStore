@model SportStore.Models.Product
@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Chi Tiết Sản Phẩm</h2>
            <p class="text-muted mb-0">Thông tin chi tiết về sản phẩm</p>
        </div>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay Lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - Image -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    @if (!string.IsNullOrEmpty(Model.Img))
                    {
                        <img src="~/images/@Model.Img" alt="@Model.FullName" class="img-fluid w-100 rounded" style="object-fit: cover; height: 400px;" />
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 400px;">
                            <div class="text-center text-muted">
                                <i class="fas fa-image fa-4x mb-3"></i>
                                <p>Không có hình ảnh</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column - Details -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Product Name -->
                    <h3 class="mb-1">@Model.FullName</h3>
                    <p class="text-muted mb-4">
                        <i class="fas fa-barcode me-2"></i>Mã: <strong>@Model.ProductCode</strong>
                    </p>

                    <hr>

                    <!-- Details Grid -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small mb-1">
                                    <i class="fas fa-copyright me-1"></i>Thương Hiệu
                                </label>
                                <p class="fw-semibold mb-0">@(Model.Brand ?? "Chưa cập nhật")</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small mb-1">
                                    <i class="fas fa-list me-1"></i>Danh Mục
                                </label>
                                <p class="fw-semibold mb-0">
                                    @if (Model.Category != null)
                                    {
                                        <span>@Model.Category.FullName</span>
                                        <small class="text-muted d-block">ID: @Model.Category.CategoryId</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small mb-1">
                                    <i class="fas fa-building me-1"></i>Nhà Cung Cấp
                                </label>
                                <p class="fw-semibold mb-0">
                                    @if (Model.Supplier != null)
                                    {
                                        <span>@Model.Supplier.SupplierName</span>
                                        <small class="text-muted d-block">ID: @Model.Supplier.SupplierId</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="detail-item">
                                <label class="text-muted small mb-1">
                                    <i class="fas fa-align-left me-1"></i>Mô Tả
                                </label>
                                <p class="mb-0">@(Model.Description ?? "Chưa có mô tả")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-tag-fill me-2"></i>Chi Tiết Sản Phẩm (Size, Màu, Giá)
                    </h6>
                </div>
                <div class="card-body p-0">
                    @if (Model.ProductDetails != null && Model.ProductDetails.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>SKU</th>
                                        <th>Size</th>
                                        <th>Màu Sắc</th>
                                        <th>Giá Bán</th>
                                        <th>Số Lượng</th>
                                        <th>Trạng Thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in Model.ProductDetails)
                                    {
                                        <tr>
                                            <td><code>@detail.Sku</code></td>
                                            <td>
                                                @if (detail.Size.HasValue)
                                                {
                                                    <span class="badge bg-info">@detail.Size</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(detail.Color))
                                                {
                                                    var colorStyle = "";
                                                    if (detail.Color.StartsWith("#"))
                                                    {
                                                        colorStyle = detail.Color;
                                                    }
                                                    else
                                                    {
                                                        var colorMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
                                                        {
                                                            {"Đen", "#000000"}, {"Black", "#000000"},
                                                            {"Trắng", "#FFFFFF"}, {"White", "#FFFFFF"},
                                                            {"Đỏ", "#FF0000"}, {"Red", "#FF0000"},
                                                            {"Xanh dương", "#0000FF"}, {"Blue", "#0000FF"}
                                                        };
                                                        colorStyle = colorMap.ContainsKey(detail.Color) ? colorMap[detail.Color] : "#CCCCCC";
                                                    }
                                                    <span class="badge" style="background-color: @colorStyle;
                                                          color: @(colorStyle.Equals("#FFFFFF") ? "#000" : "#fff");
                                                          border: 1px solid #ddd;">
                                                        @detail.Color
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td><strong class="text-primary">@detail.Price.ToString("N0") đ</strong></td>
                                            <td>
                                                <span class="badge @(detail.Quantity > 0 ? "bg-success" : "bg-danger")">
                                                    @detail.Quantity
                                                </span>
                                            </td>
                                            <td>
                                                @if (detail.Quantity > 0)
                                                {
                                                    <span class="badge bg-success">Còn hàng</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Hết hàng</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-inbox fs-1"></i>
                            <p class="mt-2">Chưa có thông tin chi tiết sản phẩm</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
