@model SportStore.Models.Product
@{
    ViewData["Title"] = "Chỉnh Sửa Sản Phẩm";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-pencil-square text-primary" style="font-size: 3rem;"></i>
                </div>
                <h2 class="fw-bold">Chỉnh Sửa Sản Phẩm</h2>
                <p class="text-muted">Cập nhật thông tin sản phẩm của bạn</p>
            </div>

            <!-- Main Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="ProductId" />

                        <div class="row">
                            <!-- Left Column: Form Fields -->
                            <div class="col-lg-8">
                                <!-- Thông tin cơ bản -->
                                <h5 class="mb-3 text-primary">
                                    <i class="bi bi-info-circle me-2"></i>Thông tin cơ bản
                                </h5>

                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <label asp-for="ProductCode" class="form-label fw-semibold">
                                            Mã Sản Phẩm <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-upc"></i></span>
                                            <input asp-for="ProductCode" class="form-control" />
                                        </div>
                                        <span asp-validation-for="ProductCode" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Brand" class="form-label fw-semibold">Thương Hiệu</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-award"></i></span>
                                            <input asp-for="Brand" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Brand" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="FullName" class="form-label fw-semibold">
                                            Tên Sản Phẩm <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                            <input asp-for="FullName" class="form-control" />
                                        </div>
                                        <span asp-validation-for="FullName" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Description" class="form-label fw-semibold">Mô Tả</label>
                                        <textarea asp-for="Description" class="form-control" rows="4"
                                                  placeholder="Mô tả chi tiết về sản phẩm..."></textarea>
                                        <span asp-validation-for="Description" class="text-danger small"></span>
                                    </div>
                                </div>

                                <hr class="my-4" />

                                <!-- Phân loại -->
                                <h5 class="mb-3 text-primary">
                                    <i class="bi bi-grid me-2"></i>Phân loại sản phẩm
                                </h5>

                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <label asp-for="CategoryId" class="form-label fw-semibold">
                                            Danh Mục <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-folder"></i></span>
                                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                                <option value="">-- Chọn danh mục --</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="SupplierId" class="form-label fw-semibold">
                                            Nhà Cung Cấp <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-truck"></i></span>
                                            <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierId">
                                                <option value="">-- Chọn nhà cung cấp --</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="SupplierId" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column: Image Upload & Preview -->
                            <div class="col-lg-4">
                                <h5 class="mb-3 text-primary">
                                    <i class="bi bi-image me-2"></i>Hình ảnh
                                </h5>

                                <!-- Current Image Preview -->
                                <div class="card bg-light mb-3">
                                    <div class="card-body text-center">
                                        <p class="small text-muted mb-2">Hình ảnh hiện tại:</p>
                                        <img id="currentImage"
                                             src="~/images/@Model.Img"
                                             alt="Current Product"
                                             class="img-fluid rounded shadow-sm mb-2"
                                             style="max-height: 200px; object-fit: contain;"
                                             onerror="this.style.display='none'; this.nextElementSibling.textContent='Chưa có ảnh'" />
                                        <div class="small text-muted">@Model.Img</div>
                                    </div>
                                </div>

                                <!-- Upload New Image -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        Cập nhật hình ảnh mới
                                    </label>
                                    <input type="file"
                                           name="ImgFile"
                                           class="form-control"
                                           id="imageInput"
                                           accept="image/*"
                                           onchange="previewNewImage(event)" />
                                    <div class="form-text">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Để trống nếu không đổi ảnh
                                    </div>
                                </div>

                                <!-- New Image Preview -->
                                <div id="newImagePreview" class="card bg-light" style="display:none;">
                                    <div class="card-body text-center">
                                        <p class="small text-success mb-2">
                                            <i class="bi bi-check-circle me-1"></i>Ảnh mới:
                                        </p>
                                        <img id="previewImg"
                                             src=""
                                             alt="New Preview"
                                             class="img-fluid rounded shadow-sm mb-2"
                                             style="max-height: 200px; object-fit: contain;" />
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="clearNewImage()">
                                            <i class="bi bi-x-circle me-1"></i>Hủy ảnh mới
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="row">
                            <div class="col-12">
                                <h5 class="mb-3 text-primary">
                                    <i class="bi bi-tag-fill me-2"></i>Chi Tiết Sản Phẩm (Size, Màu, Giá)
                                </h5>

                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    @if (Model.ProductDetails != null && Model.ProductDetails.Any())
                                    {
                                        <span>Sản phẩm có <strong>@Model.ProductDetails.Count()</strong> biến thể. Chỉnh sửa hoặc thêm biến thể mới.</span>
                                    }
                                    else
                                    {
                                        <span>Chưa có biến thể. Thêm biến thể sản phẩm bên dưới.</span>
                                    }
                                </div>

                                <div class="table-responsive mb-3">
                                    <table class="table table-sm table-bordered" id="variantsTable">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width: 80px;">Size</th>
                                                <th style="width: 120px;">Màu</th>
                                                <th style="width: 150px;">Giá Bán <span class="text-danger">*</span></th>
                                                <th style="width: 100px;">Số Lượng</th>
                                                <th style="width: 150px;">SKU</th>
                                                <th style="width: 60px;"></th>
                                            </tr>
                                        </thead>
                                        <tbody id="variantsBody">
                                            @if (Model.ProductDetails != null && Model.ProductDetails.Any())
                                            {
                                                var index = 0;
                                                foreach (var detail in Model.ProductDetails)
                                                {
                                                    <tr class="variant-row">
                                                        <td>
                                                            <input type="hidden" name="ProductDetails[@index].ProductDetailId" value="@detail.ProductDetailId" />
                                                            <input type="hidden" name="ProductDetails[@index].ProductId" value="@detail.ProductId" />
                                                            <input type="number" name="ProductDetails[@index].Size" value="@detail.Size" class="form-control form-control-sm" min="0" max="255" />
                                                        </td>
                                                        <td>
                                                            <input type="text" name="ProductDetails[@index].Color" value="@detail.Color" class="form-control form-control-sm" maxlength="30" />
                                                        </td>
                                                        <td>
                                                            <input type="number" name="ProductDetails[@index].Price" value="@detail.Price" class="form-control form-control-sm" step="0.01" min="0" required />
                                                        </td>
                                                        <td>
                                                            <input type="number" name="ProductDetails[@index].Quantity" value="@detail.Quantity" class="form-control form-control-sm" min="0" />
                                                        </td>
                                                        <td>
                                                            <input type="text" name="ProductDetails[@index].Sku" value="@detail.Sku" class="form-control form-control-sm" maxlength="50" />
                                                        </td>
                                                        <td class="text-center">
                                                            <button type="button" class="btn btn-sm btn-danger remove-variant">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    index++;
                                                }
                                            }
                                            else
                                            {
                                                <tr class="variant-row">
                                                    <td>
                                                        <input type="hidden" name="ProductDetails[0].ProductDetailId" value="0" />
                                                        <input type="hidden" name="ProductDetails[0].ProductId" value="@Model.ProductId" />
                                                        <input type="number" name="ProductDetails[0].Size" class="form-control form-control-sm" placeholder="42" min="0" max="255" />
                                                    </td>
                                                    <td>
                                                        <input type="text" name="ProductDetails[0].Color" class="form-control form-control-sm" placeholder="Đen" maxlength="30" />
                                                    </td>
                                                    <td>
                                                        <input type="number" name="ProductDetails[0].Price" class="form-control form-control-sm" placeholder="500000" step="0.01" min="0" required />
                                                    </td>
                                                    <td>
                                                        <input type="number" name="ProductDetails[0].Quantity" class="form-control form-control-sm" value="0" min="0" />
                                                    </td>
                                                    <td>
                                                        <input type="text" name="ProductDetails[0].Sku" class="form-control form-control-sm" placeholder="Auto" maxlength="50" />
                                                    </td>
                                                    <td class="text-center">
                                                        <button type="button" class="btn btn-sm btn-danger remove-variant" disabled>
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <button type="button" class="btn btn-sm btn-success mb-3" id="addVariantBtn">
                                    <i class="bi bi-plus-circle me-1"></i>Thêm Biến Thể Mới
                                </button>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-end mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i>Quay Lại
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-lg me-1"></i>Lưu Thay Đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Helper Text -->
            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-asterisk text-danger" style="font-size: 0.5rem;"></i>
                    Các trường đánh dấu (*) là bắt buộc
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewNewImage(event) {
            const input = event.target;
            const preview = document.getElementById('newImagePreview');
            const previewImg = document.getElementById('previewImg');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    preview.style.display = 'block';
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        function clearNewImage() {
            const input = document.getElementById('imageInput');
            const preview = document.getElementById('newImagePreview');
            const previewImg = document.getElementById('previewImg');

            input.value = '';
            previewImg.src = '';
            preview.style.display = 'none';
        }

        let variantIndex = document.querySelectorAll('.variant-row').length;
        const productId = @Model.ProductId;

        document.getElementById('addVariantBtn').addEventListener('click', function() {
            const tbody = document.getElementById('variantsBody');
            const newRow = `
                <tr class="variant-row">
                    <td>
                        <input type="hidden" name="ProductDetails[${variantIndex}].ProductDetailId" value="0" />
                        <input type="hidden" name="ProductDetails[${variantIndex}].ProductId" value="${productId}" />
                        <input type="number" name="ProductDetails[${variantIndex}].Size" class="form-control form-control-sm" placeholder="42" min="0" max="255" />
                    </td>
                    <td>
                        <input type="text" name="ProductDetails[${variantIndex}].Color" class="form-control form-control-sm" placeholder="Đen" maxlength="30" />
                    </td>
                    <td>
                        <input type="number" name="ProductDetails[${variantIndex}].Price" class="form-control form-control-sm" placeholder="500000" step="0.01" min="0" required />
                    </td>
                    <td>
                        <input type="number" name="ProductDetails[${variantIndex}].Quantity" class="form-control form-control-sm" value="0" min="0" />
                    </td>
                    <td>
                        <input type="text" name="ProductDetails[${variantIndex}].Sku" class="form-control form-control-sm" placeholder="Auto" maxlength="50" />
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-danger remove-variant">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            `;
            tbody.insertAdjacentHTML('beforeend', newRow);
            variantIndex++;
            updateRemoveButtons();
        });

        document.getElementById('variantsBody').addEventListener('click', function(e) {
            if (e.target.closest('.remove-variant')) {
                e.target.closest('.variant-row').remove();
                updateRemoveButtons();
                reindexVariants();
            }
        });

        function updateRemoveButtons() {
            const rows = document.querySelectorAll('.variant-row');
            const removeButtons = document.querySelectorAll('.remove-variant');
            removeButtons.forEach(btn => {
                btn.disabled = rows.length <= 1;
            });
        }

        function reindexVariants() {
            const rows = document.querySelectorAll('.variant-row');
            rows.forEach((row, index) => {
                row.querySelectorAll('input').forEach(input => {
                    const name = input.getAttribute('name');
                    if (name) {
                        input.setAttribute('name', name.replace(/ProductDetails\[\d+\]/, `ProductDetails[${index}]`));
                    }
                });
            });
            variantIndex = rows.length;
        }

        updateRemoveButtons();
    </script>
}