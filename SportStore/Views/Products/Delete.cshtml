@model SportStore.Models.Product
@{
    ViewData["Title"] = "Xóa Sản Phẩm";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Warning Header -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                </div>
                <h2 class="fw-bold text-danger">Xác Nhận Xóa Sản Phẩm</h2>
                <p class="text-muted">Bạn có chắc chắn muốn xóa sản phẩm này?</p>
                <div class="alert alert-warning d-inline-block">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác!
                </div>
            </div>

            <!-- Product Info Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0 text-dark">
                        <i class="bi bi-box-seam me-2"></i>Thông Tin Sản Phẩm
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Image Column -->
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <img src="~/images/@Model.Img"
                                 alt="@Model.FullName"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height: 250px; object-fit: cover;"
                                 onerror="this.src='/images/no-image.png'" />
                        </div>

                        <!-- Details Column -->
                        <div class="col-md-8">
                            <dl class="row mb-0">
                                <dt class="col-sm-4 text-muted">
                                    <i class="bi bi-upc me-1"></i>Mã Sản Phẩm:
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.ProductCode</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">
                                    <i class="bi bi-tag me-1"></i>Tên Sản Phẩm:
                                </dt>
                                <dd class="col-sm-8 fw-semibold">
                                    @Model.FullName
                                </dd>

                                <dt class="col-sm-4 text-muted">
                                    <i class="bi bi-award me-1"></i>Thương Hiệu:
                                </dt>
                                <dd class="col-sm-8">
                                    @(Model.Brand ?? "Chưa cập nhật")
                                </dd>

                                <dt class="col-sm-4 text-muted">
                                    <i class="bi bi-folder me-1"></i>Danh Mục:
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info text-dark">
                                        @(Model.Category?.CategoryId ?? null)
                                    </span>
                                </dd>

                                <dt class="col-sm-4 text-muted">
                                    <i class="bi bi-truck me-1"></i>Nhà Cung Cấp:
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">
                                        @(Model.Supplier?.SupplierId ?? null)
                                    </span>
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <dt class="col-sm-4 text-muted">
                                        <i class="bi bi-card-text me-1"></i>Mô Tả:
                                    </dt>
                                    <dd class="col-sm-8">
                                        <p class="text-muted small mb-0">@Model.Description</p>
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Form -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductId" />

                <div class="card border-danger shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                            <div>
                                <h6 class="mb-1">Xác nhận xóa sản phẩm này?</h6>
                                <small class="text-muted">
                                    Sản phẩm sẽ bị xóa vĩnh viễn khỏi hệ thống
                                </small>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                    <i class="bi bi-arrow-left me-1"></i>Quay Lại
                                </a>
                                <button type="submit" class="btn btn-danger px-4">
                                    <i class="bi bi-trash me-1"></i>Xóa Sản Phẩm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
