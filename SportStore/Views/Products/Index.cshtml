@model IEnumerable<SportStore.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0"><i class="bi bi-box-seam me-2"></i>Danh sách sản phẩm</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Thêm sản phẩm mới
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm" >
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Nhãn hàng</th>
                            <th>Danh mục</th>
                            <th>Nhà cung cấp</th>
                            <th>Màu sắc</th>
                            <th>Giá bán</th>
                            <th>Tồn kho</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var detail = item.ProductDetails?.FirstOrDefault();
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.ProductCode)</span>
                                </td>
                                <td>
                                    <img src="~/images/@Html.DisplayFor(modelItem => item.Img)"
                                         alt="@item.FullName"
                                         class="img-thumbnail"
                                         style="width: 60px; height: 60px; object-fit: cover;" />
                                </td>
                                <td>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.FullName)</strong>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                                        }
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @Html.DisplayFor(modelItem => item.Category.FullName)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success">
                                        @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                                    </span>
                                </td>
                                <td>
                                    @if (item.ProductDetails != null && item.ProductDetails.Any())
                                    {
                                        var uniqueColors = item.ProductDetails
                                            .Where(d => !string.IsNullOrEmpty(d.Color))
                                            .Select(d => d.Color)
                                            .Distinct()
                                            .ToList();

                                        if (uniqueColors.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var color in uniqueColors.Take(3))
                                                {
                                                    var colorStyle = "";
                                                    if (color.StartsWith("#"))
                                                    {
                                                        colorStyle = color;
                                                    }
                                                    else
                                                    {
                                                        var colorMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
                                                        {
                                                            {"Đen", "#000000"}, {"Black", "#000000"},
                                                            {"Trắng", "#FFFFFF"}, {"White", "#FFFFFF"},
                                                            {"Đỏ", "#FF0000"}, {"Red", "#FF0000"},
                                                            {"Xanh dương", "#0000FF"}, {"Blue", "#0000FF"},
                                                            {"Xanh lá", "#00FF00"}, {"Green", "#00FF00"},
                                                            {"Vàng", "#FFFF00"}, {"Yellow", "#FFFF00"},
                                                            {"Cam", "#FFA500"}, {"Orange", "#FFA500"},
                                                            {"Hồng", "#FFC0CB"}, {"Pink", "#FFC0CB"},
                                                            {"Tím", "#800080"}, {"Purple", "#800080"},
                                                            {"Xám", "#808080"}, {"Gray", "#808080"}, {"Grey", "#808080"}
                                                        };
                                                        colorStyle = colorMap.ContainsKey(color) ? colorMap[color] : "#CCCCCC";
                                                    }
                                                    <span class="badge" style="background-color: @colorStyle;
                                                          color: @(colorStyle.Equals("#FFFFFF") ? "#000" : "#fff");
                                                          border: 1px solid #ddd;">
                                                        @color
                                                    </span>
                                                }
                                                @if (uniqueColors.Count > 3)
                                                {
                                                    <span class="badge bg-secondary">+@(uniqueColors.Count - 3)</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.ProductDetails != null && item.ProductDetails.Any())
                                    {
                                        var minPrice = item.ProductDetails.Min(d => d.Price);
                                        var maxPrice = item.ProductDetails.Max(d => d.Price);
                                        if (minPrice == maxPrice)
                                        {
                                            <strong class="text-primary">@minPrice.ToString("N0") đ</strong>
                                        }
                                        else
                                        {
                                            <strong class="text-primary">@minPrice.ToString("N0") - @maxPrice.ToString("N0") đ</strong>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-danger">Chưa có giá</span>
                                    }
                                </td>
                                <td>
                                    @if (item.ProductDetails != null && item.ProductDetails.Any())
                                    {
                                        var totalQty = item.ProductDetails.Sum(d => d.Quantity ?? 0);
                                        <span class="badge @(totalQty > 0 ? "bg-success" : "bg-danger")">
                                            @totalQty
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details"
                                           asp-route-id="@item.ProductId"
                                           class="btn btn-sm btn-outline-info"
                                           title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit"
                                           asp-route-id="@item.ProductId"
                                           class="btn btn-sm btn-outline-warning"
                                           title="Chỉnh sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@item.ProductId"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>