@model SportStore.Models.Invoice

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<div class="container py-5">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-receipt-cutoff text-primary"></i> Chi tiết hóa đơn
        </h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.InvoiceId" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- CỘT TRÁI -->
        <div class="col-lg-8">

            <!-- THÔNG TIN HÓA ĐƠN -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4 pb-3 border-bottom">
                        <i class="bi bi-file-text text-primary"></i> Thông tin hóa đơn
                    </h5>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="bg-primary bg-opacity-10 rounded p-3 me-3">
                                    <i class="bi bi-hash text-primary fs-4"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1 small">Mã hóa đơn</p>
                                    <h6 class="mb-0 fw-bold">@Model.InvoiceCode</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="bg-success bg-opacity-10 rounded p-3 me-3">
                                    <i class="bi bi-calendar-event text-success fs-4"></i>
                                </div>
                                <div>
                                    <p class="text-muted mb-1 small">Ngày lập</p>
                                    <h6 class="mb-0 fw-bold">@Model.InvoiceDate?.ToString("dd/MM/yyyy")</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="d-flex align-items-start">
                                <div class="bg-info bg-opacity-10 rounded p-3 me-3">
                                    <i class="bi bi-check2-circle text-info fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="text-muted mb-2 small">Trạng thái đơn hàng</p>
                                    @{
                                        string statusText = "Chưa xác định";
                                        string statusClass = "secondary";
                                        string statusIcon = "bi-question-circle";

                                        if (Model.InvoiceStatus != null)
                                        {
                                            switch (Model.InvoiceStatus)
                                            {
                                                case 0:
                                                    statusText = "Chờ xử lý";
                                                    statusClass = "warning";
                                                    statusIcon = "bi-clock-history";
                                                    break;
                                                case 1:
                                                    statusText = "Đã xác nhận";
                                                    statusClass = "info";
                                                    statusIcon = "bi-check-circle";
                                                    break;
                                                case 2:
                                                    statusText = "Đang xử lý";
                                                    statusClass = "primary";
                                                    statusIcon = "bi-arrow-repeat";
                                                    break;
                                                case 3:
                                                    statusText = "Đang giao hàng";
                                                    statusClass = "info";
                                                    statusIcon = "bi-truck";
                                                    break;
                                                case 4:
                                                    statusText = "Hoàn thành";
                                                    statusClass = "success";
                                                    statusIcon = "bi-check-circle-fill";
                                                    break;
                                                case 5:
                                                    statusText = "Đã hủy";
                                                    statusClass = "danger";
                                                    statusIcon = "bi-x-circle-fill";
                                                    break;
                                                
                                            }
                                        }
                                    }
                                    <h5 class="mb-0">
                                        <span class="badge bg-@statusClass text-white px-3 py-2">
                                            <i class="bi @statusIcon me-1"></i>
                                            @statusText
                                        </span>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CHI TIẾT SẢN PHẨM -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4 pb-3 border-bottom">
                        <i class="bi bi-cart-check text-warning"></i> Chi tiết sản phẩm
                    </h5>

                    @if (Model.InvoiceDetails != null && Model.InvoiceDetails.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="py-3" style="width: 60px;">STT</th>
                                        <th class="py-3">Sản phẩm</th>
                                        <th class="py-3 text-center" style="width: 100px;">Số lượng</th>
                                        <th class="py-3 text-end" style="width: 150px;">Đơn giá</th>
                                        <th class="py-3 text-end" style="width: 150px;">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int stt = 1;
                                        decimal total = 0;
                                    }
                                    @foreach (var item in Model.InvoiceDetails)
                                    {
                                        var amount = item.UnitPrice * item.Quantity;
                                        total += amount ?? 0;

                                        <tr>
                                            <td class="text-muted">@stt</td>
                                            <td>
                                                <div class="fw-semibold">@item.Product?.FullName</div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-light text-dark">@item.Quantity</span>
                                            </td>
                                            <td class="text-end">@item.UnitPrice?.ToString("N0")</td>
                                            <td class="text-end fw-semibold">@amount?.ToString("N0")</td>
                                        </tr>

                                        stt++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- TỔNG TIỀN -->
                        <div class="mt-4 pt-4 border-top">
                            <div class="row">
                                <div class="col-md-6 ms-auto">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Tổng cộng:</span>
                                        <span class="fw-semibold">@total.ToString("N0") đ</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">VAT (0%):</span>
                                        <span class="fw-semibold">0 đ</span>
                                    </div>
                                    <div class="d-flex justify-content-between pt-2 border-top">
                                        <span class="fs-5 fw-bold">Tổng thanh toán:</span>
                                        <span class="fs-4 fw-bold text-primary">@total.ToString("N0") đ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                            <p class="text-muted mt-3">Không có sản phẩm nào trong hóa đơn.</p>
                        </div>
                    }
                </div>
            </div>

        </div>

        <!-- CỘT PHẢI -->
        <div class="col-lg-4">

            <!-- THÔNG TIN KHÁCH HÀNG -->
            <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4 pb-3 border-bottom">
                        <i class="bi bi-person-circle text-info"></i> Thông tin khách hàng
                    </h5>

                    @if (Model.Customer != null)
                    {
                        <div class="mb-3">
                            <div class="bg-info bg-opacity-10 rounded p-3 text-center mb-3">
                                <i class="bi bi-person-circle text-info" style="font-size: 3rem;"></i>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-hash"></i> Mã khách hàng
                            </label>
                            <div class="fw-semibold">@Model.Customer.CustomerCode</div>
                        </div>

                        <div class="mb-3">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-person"></i> Họ và tên
                            </label>
                            <div class="fw-semibold">@Model.Customer.FullName</div>
                        </div>

                        <div class="mb-3">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-telephone"></i> Số điện thoại
                            </label>
                            <div class="fw-semibold">
                                <a href="tel:@Model.Customer.PhoneNumber" class="text-decoration-none">
                                    @Model.Customer.PhoneNumber
                                </a>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <div class="fw-semibold">
                                <a href="mailto:@Model.Customer.Email" class="text-decoration-none">
                                    @Model.Customer.Email
                                </a>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-geo-alt"></i> Địa chỉ
                            </label>
                            <div class="fw-semibold">@Model.Customer.Address</div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-person-x text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-3 mb-0">Không có thông tin khách hàng</p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

</div>

<style>
    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .sticky-top {
        position: sticky;
    }
</style>