@model SportStore.Models.Invoice

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<div class="container py-4">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-receipt text-primary"></i> Chi tiết hóa đơn
    </h2>

    <!-- THÔNG TIN HÓA ĐƠN -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-info-circle"></i> Thông tin hóa đơn
        </div>
        <div class="card-body row g-3">
            <div class="col-md-4">
                <label class="text-muted small text-uppercase">Mã hóa đơn</label>
                <div class="fs-5">@Model.InvoiceCode</div>
            </div>
            <div class="col-md-4">
                <label class="text-muted small text-uppercase">Ngày lập</label>
                <div class="fs-5">@Model.InvoiceDate?.ToString("dd/MM/yyyy")</div>
            </div>
        </div>
    </div>

    <!-- THÔNG TIN KHÁCH HÀNG -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-info text-white">
            <i class="bi bi-person-circle"></i> Thông tin khách hàng
        </div>

        <div class="card-body">
            @if (Model.Customer != null)
            {
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="text-muted small text-uppercase">Mã khách hàng</label>
                        <div class="fs-5">@Model.Customer.CustomerCode</div>
                    </div>

                    <div class="col-md-4">
                        <label class="text-muted small text-uppercase">Tên khách hàng</label>
                        <div class="fs-5">@Model.Customer.FullName</div>
                    </div>

                    <div class="col-md-4">
                        <label class="text-muted small text-uppercase">Số điện thoại</label>
                        <div class="fs-5">@Model.Customer.PhoneNumber</div>
                    </div>

                    <div class="col-md-4">
                        <label class="text-muted small text-uppercase">Email</label>
                        <div class="fs-5">@Model.Customer.Email</div>
                    </div>

                    <div class="col-md-8">
                        <label class="text-muted small text-uppercase">Địa chỉ</label>
                        <div class="fs-5">@Model.Customer.Address</div>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted">Không có thông tin khách hàng.</p>
            }
        </div>
    </div>

    <!-- CHI TIẾT HÓA ĐƠN -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning">
            <i class="bi bi-list-ul"></i> Chi tiết sản phẩm
        </div>

        <div class="card-body table-responsive">
            @if (Model.InvoiceDetails != null && Model.InvoiceDetails.Any())
            {
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá (VNĐ)</th>
                            <th>Thành tiền (VNĐ)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                            decimal total = 0;
                        }
                        @foreach (var item in Model.InvoiceDetails)
                        {
                            var amount = item.UnitPrice * item.Quantity;
                            total += amount ?? 0;

                            <tr>
                                <td>@stt</td>
                                <td>@item.Product?.FullName</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice</td>
                                <td>@amount</td>
                            </tr>

                            stt++;
                        }
                    </tbody>

                    <tfoot>
                        <tr class="table-info fw-bold">
                            <td colspan="4" class="text-end">Tổng tiền:</td>
                            <td>@total.ToString("N0") VNĐ</td>
                        </tr>
                    </tfoot>
                </table>
            }
            else
            {
                <p class="text-muted">Không có sản phẩm nào trong hóa đơn.</p>
            }
        </div>
    </div>

    <!-- BUTTON -->
    <div>
        <a asp-action="Edit" asp-route-id="@Model.InvoiceId" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

</div>
