@{
	ViewData["Title"] = "Đăng nhập";
}
<div class="row">
	<div class="col-sm-4"></div>
	<div class="col-sm-4">
		<div class="p-3 shadow">
			<h3 class="text-center text-info">ĐĂNG NHẬP</h3>
			<form method="post" asp-action="Login">
				<input class="form-control" type="text" name="sodienthoai"
					   placeholder="Số điện thoại" required><br>
				<input class="form-control" type="password" name="password" autocomplete="on"
					   placeholder="Mật khẩu" required><br>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<button type="submit" class="btn btn-primary">Đăng nhập</button>
			</form>
			<div class="my-3 text-center">Chưa có tài khoản? <a asp-action="Register">Đăng ký</a></div>
		</div>
	</div>
	<div class="col-sm-4"></div>
</div>