@model SportStore.Models.Account

@{
    ViewData["Title"] = "Chi Tiết Tài Khoản";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-person-badge"></i> Chi Tiết Tài Khoản </h2>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.AccountId" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Chỉnh Sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay Lại
        </a>
    </div>
</div>

@if(Model.CustomerId != null){
    <div class="content-header">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="text-muted small">@Html.DisplayNameFor(model => model.Customer.CustomerCode)</label>
                <div class="fs-5 fw-semibold">@Html.DisplayFor(model => model.Customer.CustomerCode)</div>
            </div>
            <div class="col-md-6 mb-3">
                <label class="text-muted small">@Html.DisplayNameFor(model => model.Customer.FullName)</label>
                <div class="fs-5 fw-semibold">@Html.DisplayFor(model => model.Customer.FullName)</div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="text-muted small">Email</label>
                <div class="fs-5">
                    <i class="bi bi-envelope"></i> @Html.DisplayFor(model => model.Customer.Email)
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label class="text-muted small">@Html.DisplayNameFor(model => model.Customer.PhoneNumber)</label>
                <div class="fs-5 fw-semibold">
                    <i class="bi bi-telephone"></i> @Html.DisplayFor(model => model.Customer.PhoneNumber)
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="text-muted small">@Html.DisplayNameFor(model => model.Role)</label>
                <div class="fs-5 fw-semibold">
                    <i class="bi bi-person-badge"></i> @Html.DisplayFor(model => model.Role)
                </div>
            </div>
        </div>

    </div>
}
@if(Model.EmployeeId != null){
<div class="content-header">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="text-muted small">@Html.DisplayNameFor(model => model.Employee.EmployeeCode)</label>
            <div class="fs-5 fw-semibold">@Html.DisplayFor(model => model.Employee.EmployeeCode)</div>
        </div>
        <div class="col-md-6 mb-3">
            <label class="text-muted small">@Html.DisplayNameFor(model => model.Employee.FullName)</label>
            <div class="fs-5 fw-semibold">@Html.DisplayFor(model => model.Employee.FullName)</div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="text-muted small">Email</label>
            <div class="fs-5">
                <i class="bi bi-envelope"></i> @Html.DisplayFor(model => model.Employee.Email)
             </div>
        </div>
        <div class="col-md-6 mb-3">
             <label class="text-muted small">@Html.DisplayNameFor(model => model.Employee.PhoneNumber)</label>
             <div class="fs-5 fw-semibold">
                <i class="bi bi-telephone"></i> @Html.DisplayFor(model => model.Employee.PhoneNumber)
             </div>
        </div>
    </div>

</div>
}