@model SportStore.Models.Account

@{
    ViewData["Title"] = "Chi tiết tài khoản";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold">
            <i class="bi bi-person-badge text-primary"></i> Thông Tin Tài Khoản
        </h2>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.AccountId" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="info-item">
                        <label class="text-muted small text-uppercase mb-1">
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </label>
                        <div class="fs-5">
                            <i class="bi bi-telephone-fill text-info"></i>
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-item">
                        <label class="text-muted small text-uppercase mb-1">Vai Trò</label>
                        <div class="fs-5">
                            <span class="badge bg-primary fs-6 px-3 py-2">
                                <i class="bi bi-person-badge"></i> @Html.DisplayFor(model => model.Role)
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-item">
                        <label class="text-muted small text-uppercase mb-1">Trạng Thái</label>
                        <div class="fs-5">
                            @if (Model.Status == 1)
                            {
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    <i class="bi bi-check-circle-fill"></i> Hoạt động
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6 px-3 py-2">
                                    <i class="bi bi-x-circle-fill"></i> Không hoạt động
                                </span>
                            }
                        </div>
                    </div>
                </div>  

                @if (Model.CustomerId != null)
                {
                    <div class="col-12 mt-4">
                        <h6 class="text-primary mb-3 pb-2 border-bottom">
                            <i class="bi bi-person-circle"></i> Thông Tin Khách Hàng
                        </h6>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="text-muted small text-uppercase mb-1">
                                @Html.DisplayNameFor(model => model.Customer.CustomerCode)
                            </label>
                            <div class="fs-5 fw-semibold">
                                <i class="bi bi-hash text-primary"></i>
                                @Html.DisplayFor(model => model.Customer.CustomerCode)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="text-muted small text-uppercase mb-1">
                                @Html.DisplayNameFor(model => model.Customer.FullName)
                            </label>
                            <div class="fs-5 fw-semibold">
                                <i class="bi bi-person-fill text-primary"></i>
                                @Html.DisplayFor(model => model.Customer.FullName)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="text-muted small text-uppercase mb-1">Email</label>
                            <div class="fs-5">
                                <i class="bi bi-envelope-fill text-primary"></i>
                                @Html.DisplayFor(model => model.Customer.Email)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="text-muted small text-uppercase mb-1">
                                @Html.DisplayNameFor(model => model.Customer.PhoneNumber)
                            </label>
                            <div class="fs-5">
                                <i class="bi bi-telephone-fill text-primary"></i>
                                @Html.DisplayFor(model => model.Customer.PhoneNumber)
                            </div>
                        </div>
                    </div>
                }

                @if (Model.EmployeeId != null)
                {
                    <div class="col-12 mt-4">
                        <h6 class="text-success mb-3 pb-2 border-bottom">
                            <i class="bi bi-person-badge"></i> Thông Tin Nhân Viên
                        </h6>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="text-muted small text-uppercase mb-1">
                                @Html.DisplayNameFor(model => model.Employee.EmployeeCode)
                            </label>
                            <div class="fs-5 fw-semibold">
                                <i class="bi bi-hash text-success"></i>
                                @Html.DisplayFor(model => model.Employee.EmployeeCode)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="text-muted small text-uppercase mb-1">
                                @Html.DisplayNameFor(model => model.Employee.FullName)
                            </label>
                            <div class="fs-5 fw-semibold">
                                <i class="bi bi-person-fill text-success"></i>
                                @Html.DisplayFor(model => model.Employee.FullName)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="text-muted small text-uppercase mb-1">Email</label>
                            <div class="fs-5">
                                <i class="bi bi-envelope-fill text-success"></i>
                                @Html.DisplayFor(model => model.Employee.Email)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <label class="text-muted small text-uppercase mb-1">
                                @Html.DisplayNameFor(model => model.Employee.PhoneNumber)
                            </label>
                            <div class="fs-5">
                                <i class="bi bi-telephone-fill text-success"></i>
                                @Html.DisplayFor(model => model.Employee.PhoneNumber)
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>