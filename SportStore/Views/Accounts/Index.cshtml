@model IEnumerable<SportStore.Models.Account>

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-people"></i> Danh Sách Tài Khoản</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm Mới
    </a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td> 
                <td>@(item.Status == 1 ? "Đang hoạt động" : "Không hoạt động")</td>
                <td>
                    <div class="table-actions">
                        <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-info" title="Chi tiết">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-sm btn-primary" title="Sửa">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-danger" title="Xóa">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

