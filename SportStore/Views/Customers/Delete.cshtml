@model SportStore.Models.Customer

@{
    ViewData["Title"] = "Xóa Khách Hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-trash"></i> Xóa Khách Hàng</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay Lại
    </a>
</div>

<div class="content-header">
    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
        <div>
            <h5 class="mb-1">Xác nhận xóa</h5>
            <p class="mb-0">Bạn có chắc chắn muốn xóa khách hàng này? Hành động này không thể hoàn tác.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <label class="text-muted small">@Html.DisplayNameFor(model => model.CustomerCode)</label>
            <div class="fs-5 fw-semibold">@Html.DisplayFor(model => model.CustomerCode)</div>
        </div>
        <div class="col-md-6 mb-3">
            <label class="text-muted small">@Html.DisplayNameFor(model => model.FullName)</label>
            <div class="fs-5 fw-semibold">@Html.DisplayFor(model => model.FullName)</div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <label class="text-muted small">Email</label>
            <div class="fs-5">@Html.DisplayFor(model => model.Email)</div>
        </div>
        <div class="col-md-6 mb-3">
            <label class="text-muted small">@Html.DisplayNameFor(model => model.PhoneNumber)</label>
            <div class="fs-5">@Html.DisplayFor(model => model.PhoneNumber)</div>
        </div>
    </div>

    <div class="mb-4">
        <label class="text-muted small">@Html.DisplayNameFor(model => model.Address)</label>
        <div class="fs-5">@Html.DisplayFor(model => model.Address)</div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Xác Nhận Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Hủy
            </a>
        </div>
    </form>
</div>
