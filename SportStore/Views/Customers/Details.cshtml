@model SportStore.Models.Customer

@{
    ViewData["Title"] = "Chi Tiết Khách Hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-person-badge"></i> Chi Tiết Khách Hàng</h2>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.CustomerId" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Chỉnh Sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay Lại
        </a>
    </div>
</div>

<div class="content-header">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="text-muted small">@Html.DisplayNameFor(model => model.CustomerCode)</label>
            <div class="fs-5 fw-semibold">@Html.DisplayFor(model => model.CustomerCode)</div>
        </div>
        <div class="col-md-6 mb-3">
            <label class="text-muted small">@Html.DisplayNameFor(model => model.FullName)</label>
            <div class="fs-5 fw-semibold">@Html.DisplayFor(model => model.FullName)</div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="text-muted small">Email</label>
            <div class="fs-5">
                <i class="bi bi-envelope"></i> @Html.DisplayFor(model => model.Email)
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <label class="text-muted small">@Html.DisplayNameFor(model => model.PhoneNumber)</label>
            <div class="fs-5">
                <i class="bi bi-telephone"></i> @Html.DisplayFor(model => model.PhoneNumber)
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label class="text-muted small">@Html.DisplayNameFor(model => model.Address)</label>
        <div class="fs-5">
            <i class="bi bi-geo-alt"></i> @Html.DisplayFor(model => model.Address)
        </div>
    </div>
</div>
