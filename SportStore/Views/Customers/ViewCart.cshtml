@model List<SportStore.Models.CartItem>

<h3>Giỏ hàng của bạn</h3>

@if (Model.Count > 0)
{
    int stt = 0;
    decimal tongtien = 0;

    <table class="table table-striped">
        <thead>
            <tr>
                <th>STT</th>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                stt++;
                var thanhtien = item.price * item.quantity;
                tongtien += thanhtien;

                <tr class="align-middle">
                    <td>@stt</td>
                    <td>
                        <img src="~/images/@item.product.Img" width="50" alt="@item.product.FullName" />
                        @item.product.FullName
                    </td>
                    <td>@item.price.ToString("N0") VNĐ</td>
                    <td>
                        <form asp-action="UpdateItem" method="post" class="d-flex align-items-center">
                           
                            <input type="hidden" name="productDetailId" value="@item.producDetailId" />
                            <input type="number" name="quantity" value="@item.quantity" min="1" class="form-control me-2" style="width: 80px;" />
                            <button type="submit" class="btn btn-warning btn-sm">Cập nhật</button>
                        </form>
                    </td>
                    <td>@thanhtien.ToString("N0") VNĐ</td>
                    <td>
                        <form asp-action="RemoveItem" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                            
                            <input type="hidden" name="productDetailId" value="@item.producDetailId" />
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><strong>Tổng tiền:</strong></td>
                <td colspan="2"><strong>@tongtien.ToString("N0") VNĐ</strong></td>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <a asp-controller="Main" asp-action="Index" class="btn btn-secondary">Tiếp tục mua hàng</a>
        <a asp-action="Checkout" class="btn btn-success">Thanh toán</a>
        <form asp-action="ClearAllCart" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?');">
            <button type="submit" class="btn btn-danger">Xóa toàn bộ</button>
        </form>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>Không có sản phẩm trong giỏ hàng</p>
        <a asp-controller="Main" asp-action="Index" class="btn btn-primary">Mua sắm ngay</a>
    </div>
}